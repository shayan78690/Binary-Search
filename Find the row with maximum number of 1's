class Solution {
    public int rowWithMax1s(int arr[][]) {
        int max_count = -1;
        int idx = -1;
        
        for(int i = 0; i < arr.length; i++) {
            int count_Row = 0;
            for(int j = 0; j <  arr[0].length; j++) {
                count_Row += arr[i][j];
            }
            if(count_Row > max_count) {
                max_count = count_Row;
                idx = i;
            }
        }
        return idx;
    }
}
