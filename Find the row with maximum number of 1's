class Solution {
    public int[] rowAndMaximumOnes(int[][] mat) {
        int idx = -1;
        int max_count = -1;
        for(int i = 0; i < mat.length; i++) {
            int count_Row = 0;
            for(int j = 0; j < mat[0].length; j++) {
                count_Row += mat[i][j];
            }
            if(count_Row > max_count) {
                max_count = count_Row;
                idx = i;
            }
        }
        return new int[]{idx, max_count};
    }
}
